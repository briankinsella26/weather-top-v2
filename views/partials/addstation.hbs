<form class="ui stacked segment form" action="/dashboard/addstation" method="POST">
  <div class="three fields">
    <div class="field">
      <label>Name</label>
      <input placeholder="Name" type="text" name="name" minlength="1" maxlength="24" required="required">
    </div>
    <div class="field">
      <label>Latitude</label>
      <input placeholder="00.00" type="number" step="any" name="latitude" min="-90" max="90" required="required">
    </div>
    <div class="field">
      <label>Longitude</label>
      <input placeholder="00.00" type="number" step="any" name="longitude" min="-180" max="180" required="required">
    </div>
  </div>
  <button class="ui blue submit button">Add Station</button>
</form>