<table class="ui celled table">
  <thead>
    <tr>
      <th>Date/Time</th>
      <th>Code</th>
      <th>Temp</th>
      <th>Wind Speed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
          {{this.date}}
        </td>
        <td>
          {{this.code}}
        </td>
        <td>
          {{this.temperature}}
        </td>
        <td>
          {{this.windSpeed}}
        </td>
        <td>
          {{this.windDirection}}
        </td>
        <td>
          {{this.pressure}}
        </td>
        <td>
          <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui icon button">
            <i class="trash icon orange"></i></a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>