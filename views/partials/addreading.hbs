<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="three fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="00" type="number" name="code" min="100" max="800" step="100" required="required" />
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="00.0C" type="number" step=".1" name="temperature" min="-100" max="100" required="required" />
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00.0kMh" type="number" step=".1" name="windSpeed" min="0" max="500" required="required" />
    </div>
  </div>
  <div class="three fields">
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="000deg" type="number" name="windDirection" min="0" max="360" required="required" />
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="000hPa" type="number" name="pressure" min="500" max="1500" required="required" />
    </div>
  </div>
  <button class="ui blue submit button">Submit Report</button>
</form>