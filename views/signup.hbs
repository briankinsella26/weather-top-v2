{{> welcomemenu id="signup"}}

<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui header">Register</h3>
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text" name="firstName" required="required">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text" name="lastName" required="required">
    </div>
  </div>
  <div class="field">
    <label>Email</label>
    <input placeholder="Email" type="email" name="email" required="required">
  </div>
  <div class="field">
    <label>Password</label>
    <input type="password" name="password" required="required">
  </div>
  <button class="ui blue submit button">Submit</button>
</form>