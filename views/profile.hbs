{{> menu id="profile"}}

<div class="ui basic middle aligned segment">
  <div class="column">
    <form class="ui stacked segment form" action="/editprofile" method="POST">
      <h3 class="ui header">Edit Profile</h3>
      <div class="two fields">
        <div class="field">
          <label>First Name</label>
          <input value="{{user.firstName}}" type="text" name="firstName" required="required">
        </div>
        <div class="field">
          <label>Last Name</label>
          <input value="{{user.lastName}}" type="text" name="lastName" required="required">
        </div>
      </div>
      <div class="field">
        <label>Email</label>
        <input value="{{user.email}}" type="text" name="email" required="required">
      </div>
      <div class="field">
        <label>New Password</label>
        <input type="password" name="password">
      </div>
      <button class="ui blue submit button">Save</button>
    </form>
  </div>
</div>